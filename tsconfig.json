{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es6", "dom"],
    "module": "es6",
    "moduleResolution": "node",
    "mapRoot": "./",
    "sourceMap": true,
    "outDir": "dist",
    "target": "es5"
  },
  "include": [
    "index.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true
  }
}
